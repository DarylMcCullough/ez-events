<!DOCTYPE html>
<html>
  <head>
    <title>EZ Events</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li>
                        <%= link_to "About EZ Events", root_path, class: 'navbar-link navbar-brand'  %></li>
                    </li> 
                    <li>
                        <%= link_to "Registered Applications", registered_applications_path, class: "navbar-link" %>
                    </li>

                    <li>
                        <a href="#">Contact</a>
                    </li>
                    
                    <% if user_signed_in? %>
                      <li><%= link_to 'Edit profile', edit_user_registration_path, class: 'navbar-link' %> </li>
                      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'navbar-link'  %></li>
                    <% else %>
                      <li>
                        <%= link_to "Already signed up?", new_user_session_path, class: 'navbar-link'  %></li>
                      </li>
                    <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
        <div class="messages">
    
        <% if flash[:notice] %>
           <div class="alert alert-success">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash[:notice] %>
           </div>
         <% elsif flash[:alert] %>
           <div class="alert alert-warning">
             <button type="button" class="close" data-dismiss="alert">&times;</button>
             <%= flash[:alert] %>
           </div>
         <% end %>
    </div>
    <div class="spacer"></div>
    
     <%= yield %>
  </body>
</html>
