<!-- Half Page Image Background Carousel Header -->
    <header id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for Slides -->
        <div class="carousel-inner">
            <div class="item active">
                <!-- Set the first background image using inline CSS below. -->
                <div class="fill" style="background-image:url('assets/developer.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Instrument your app</h2>
                </div>
            </div>
            <div class="item">
                <!-- Set the second background image using inline CSS below. -->
                <div class="fill" style="background-image:url('assets/cloud.jpg');"></div>
                <div class="carousel-caption">
                    <h2>Upload events</h2>
                </div>
            </div>
            <div class="item">
                <!-- Set the third background image using inline CSS below. -->
                <div class="fill" style="background-image:url('assets/graph.jpg');"></div>
                <div class="carousel-caption">
                    <h2>View statistics</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        
        <!--
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a> -->

    </header>
    
    <!-- Page Content -->
    <div class="container welcome-content">
        
        <div class="row">
            <div class="col-lg-3">
                <img src="assets/logo.jpg">
            </div>
            <div class="col-lg-9">
                <h1>Web metrics made easy</h1>
                <p><span class="app-name">EZ-events</span> makes it easy to collect and view statistics for your web site.</p>
                
                <span id="signup" class="my-link"><%= link_to "Sign up!", new_user_registration_path  %></span>
            </div>
        </div>


        <hr>
        

    </div>
